<odoo>
    <record id="sale_order_form_priority_button" model="ir.ui.view">
        <field name="name">sale.order.form.priority.button</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button
                    name="action_mark_as_priority"
                    type="object"
                    string="Mark as Priority"
                    class="btn-primary"
                    attrs="{'invisible': [('is_priority', '=', True)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
